@model SystemIntegrated.Models.LoginViewModel
@{
    ViewBag.Title = "Login";

}

<div class="col-md-12" style="margin:0 auto">
    <div class="row">
        <h3 class="titulo">Entrar no Sistema</h3>
    </div>

    <div class="col-md-12">
        <section id="loginForm" style="margin:0 auto">
            @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new {@class="text-danger"} )
                <div class="form-group">
                    @Html.LabelFor(m => m.Usuario, new { @class = "control-label col-md-4" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Senha, new { @class = "control-label col-md-4" })
                    <div class="col-md-5">
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-4">
                        @Html.CheckBoxFor(m => m.LembrarMe)
                        @Html.LabelFor(m => m.LembrarMe)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-4">
                        <input type="submit" class="btn btn-success" value="Entrar" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            $('#Usuario').focus();

        });
    </script>
}